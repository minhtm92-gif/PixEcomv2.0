# ─── Database ────────────────────────────────────────
# Staging/production: add connection_limit + connect_timeout to prevent 503s
# DATABASE_URL="postgresql://user:pass@host/db?schema=public&connection_limit=20&connect_timeout=10"
DATABASE_URL="postgresql://pixecom:pixecom_dev@localhost:5434/pixecom_v2?schema=public&connection_limit=20&connect_timeout=10"

# ─── Redis ───────────────────────────────────────────
REDIS_URL="redis://localhost:6379"

# ─── API ─────────────────────────────────────────────
PORT=3001
NODE_ENV=development

# ─── Auth (JWT) ──────────────────────────────────────
JWT_SECRET="change-me-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
REFRESH_TOKEN_PEPPER="change-me-pepper-32-chars-prod!!"
COOKIE_SECURE="false"

# ─── Google SSO (optional) ───────────────────────────
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# ─── Encryption (for FB tokens) ─────────────────────
ENCRYPTION_KEY="change-me-32-char-key-in-prod!!"

# ─── Cloudflare R2 (Object Storage) ────────────────
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="pixecom-assets"
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
CDN_BASE_URL="https://cdn.pixelxlab.com"

# ─── Frontend ────────────────────────────────────────
NEXT_PUBLIC_API_URL="http://localhost:3001/api"
